<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table class="table">
  <thead class="thead">
    <tr>
      <th>Title</th>
      <th>Picture</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="tbody">
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.title %></td>
        <td><%= image_tag restaurant.picture.thumb.url %></td>
        <td><%= restaurant.description %></td>
        <td><%= link_to 'Show', restaurant, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-default' %>
